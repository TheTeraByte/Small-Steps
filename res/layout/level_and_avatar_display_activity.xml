<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background1_final"
    >

    <TextView
        android:id="@+id/level_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/current_level_string" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/avatar_display_image_view"
        android:contentDescription="@string/generic_avatar_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_display_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        />
		
</RelativeLayout>